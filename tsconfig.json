{
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2018",
    "module": "commonjs",
		"resolveJsonModule": true,
    "declaration": true,
		"pretty": true,
		"stripInternal": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    // "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true
  }
}
